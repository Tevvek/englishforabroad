---
import Layout from "./Layout.astro";
import Navbar from "../components/Navbar.astro";
import type { Podcast } from "@/types/resources";
import Footer from "@/sections/Footer.astro";
import Volume from "@/components/Volume.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
const { title, longDescription, image, theme, link, slug } = frontmatter;

const markdowns = await Astro.glob("../pages/resources/podcasts/*.md");
const podcasts = markdowns.map<Podcast>((markdown) => ({
  url: markdown.url!,
  ...(markdown.frontmatter as Omit<Podcast, "url">),
}));

const currentIndex = podcasts.findIndex((pd) => pd.title === title);

const similarPodcasts = podcasts
  .slice(currentIndex + 1)
  .concat(podcasts.slice(0, currentIndex))
  .filter((pd) => pd.theme === theme && pd.title !== title)
  .slice(0, 3);
---

<script>
  import { selectedPodcast } from "@/components/nanostore";
  import { PodcastsThemes } from "@/types/resources";

  const anchor = document.querySelector("a#anchor-theme");
  anchor?.addEventListener("click", () => {
    const themeText = anchor.textContent;
    const theme = Object.values(PodcastsThemes).find(
      (value) => value === themeText
    )!;
    selectedPodcast.set(theme);
  });
</script>

<Layout title=`Ali Enright ESL - ${title} Podcast`>
  <Navbar />

  <main class="bg-[#85CBCC] flex-1">
    <section
      class="2xl:container px-4 md:px-8 py-8 md:py-12 grid grid-cols-1 md:grid-cols-3 gap-8"
    >
      <h1
        class="text-5xl font-bold mb-4 md:col-span-3 text-white text-center md:text-start"
      >
        {title}
      </h1>
      <div
        class="bg-white text-cyan-800 rounded-xl p-4 gap-x-4 shadow-lg md:col-span-3 grid grid-rows-[auto,auto,auto,1fr,auto] md:grid-cols-[auto,1fr] md:grid-rows-[auto,auto,1fr,auto]"
      >
        <div
          class="max-h-64 md:col-start-1 md:row-start-1 md:row-span-4 place-self-center mb-4 md:mb-0 overflow-hidden isolate relative"
        >
          <div
            class="absolute inset-0 before:absolute before:inset-0 before:-translate-y-full before:animate-[shimmer-vertical_2s_infinite] before:bg-gradient-to-b before:from-transparent before:via-gray-200 before:to-transparent"
          >
          </div>
          <Image
            src={image}
            alt={title}
            class="z-10"
            transition:name={slug ? slug : title.replaceAll(" ", "")}
            loading="eager"
            width={256}
            height={256}
          />
        </div>

        <a
          id="anchor-theme"
          href="/resources"
          class="border border-cyan-800 py-0.5 font-semibold text-cyan-800 px-4 rounded-full text-xs transition duration-300 hover:scale-105 shadow md:col-start-2 md:row-start-1 w-fit place-self-end mb-4 md:mb-0 row-start-1"
          >{theme}</a
        >
        <p class="text-sm font-bold md:col-start-2 md:row-start-2">About:</p>
        <p class="md:col-start-2 md:row-start-3 mb-4">
          {longDescription}
        </p>
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-cyan-800 text-white font-bold rounded-full px-12 py-2 md:w-fit transition duration-300 hover:scale-105 shadow flex justify-center items-center gap-x-2 md:col-start-2 md:row-start-4"
          >Listen here <Volume />
        </a>
      </div>

      <!-- Similar -->
      <h2
        class="text-3xl text-white uppercase text-center md:text-start md:col-span-3"
      >
        Similar podcasts
      </h2>
      {
        similarPodcasts.map((tpd) => (
          <a
            href={tpd.url}
            class="bg-white text-cyan-800 rounded-xl p-4 h-80 grid-rows-[min-content,min-content,auto] xs:h-44 lg:h-44 md:h-80 grid xs:grid-rows-[auto,1fr] xs:grid-cols-[auto,1fr] lg:grid-rows-[auto,1fr] lg:grid-cols-[auto,1fr] md:grid-rows-[min-content,min-content,auto] md:grid-cols-1 gap-x-4 transition duration-300 hover:scale-105 shadow-lg"
          >
            <h3 class="font-bold xs:col-start-2 xs:row-start-1 lg:col-start-2 lg:row-start-1 md:col-start-1 md:row-start-1 line-clamp-2">
              {tpd.title}
            </h3>
            <p class="text-sm line-clamp-2 xs:line-clamp-6 lg:line-clamp-6 md:line-clamp-2 mb-2 xs:mb-0 md:mb-2 lg:mb-0 xs:col-start-2 xs:row-start-2 md:col-start-1 md:row-start-2 lg:col-start-2 lg:row-start-2 lg:h-fit">
              {tpd.shortDescription}
            </p>
            <div class="self-end max-w-48 w-full xs:max-w-36 md:max-w-48 lg:max-w-36 aspect-square place-self-center xs:col-start-1 xs:row-start-1 xs:row-span-2 md:col-start-1 md:row-start-3 md:row-span-1 lg:col-start-1 lg:row-start-1 lg:row-span-2 overflow-hidden isolate relative">
              <div class="absolute inset-0 before:absolute before:inset-0 before:-translate-y-full before:animate-[shimmer-vertical_2s_infinite] before:bg-gradient-to-b before:from-transparent before:via-gray-200 before:to-transparent" />
              <Image
                src={tpd.image}
                alt={title}
                transition:name={tpd.title.replaceAll(" ", "")}
                class="z-10"
                loading="eager"
                width={192}
                height={192}
              />
            </div>
          </a>
        ))
      }
    </section>
  </main>

  <Footer />
</Layout>
