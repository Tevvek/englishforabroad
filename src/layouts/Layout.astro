---
import "@fontsource-variable/nunito";
import { ClientRouter } from "astro:transitions";
import "swiper/css";
import "swiper/css/pagination";
import "@/styles/global.css";
import Navbar from "@/components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- BASE -->
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <ClientRouter />

    <!-- SEO -->
    <meta
      name="description"
      content="English for Abroad offers private, personalized online English lessons, catering to both children and adult students from Korea to Spain. Class offerings range from conversation and business English to writing tutoring and test prep. Each session is tailored to your individual learning goals. Classes also integrate advanced paraphrasing tools to enhance your learning growth. Enjoy focused instruction adjusted for all proficiency levels, whether you're a beginner or advanced. Benefit from my professional guidance as an experienced teacher dedicated to your success. Launch your learning journey and enroll in your first class today!"
    />
    <meta
      name="keywords"
      content="ESL Classes, Online Lessons, Business English, English Tutoring, Conversation Course"
    />
    <meta name="viewport" content="width=device-width" />

    <!-- SOCIAL MEDIA -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Private, personalized English lessons for kids and adults. From conversation and business to writing and test prepâ€”tailored to your goals, all levels welcome. Start your learning journey today!"
    />
    <meta
      property="og:image"
      content="https://www.englishforabroad.com/logo.png"
    />
    <meta property="og:url" content="https://www.englishforabroad.com/" />
    <meta property="og:type" content="website" />

    <!-- REST -->
    <slot name="head" />

    <!-- calendly popup -->
    <link
      href="https://assets.calendly.com/assets/external/widget.css"
      rel="stylesheet"
    />
    <script
      src="https://assets.calendly.com/assets/external/widget.js"
      type="text/javascript"
      async></script>

    <!-- Google Recaptcha -->
    <script
      is:inline
      src={`https://www.google.com/recaptcha/api.js?render=${import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY}`}
      async
      defer></script>
  </head>
  <body class="flex flex-col min-h-screen">
    <Navbar />

    <a
      class="rotate-[270deg] origin-bottom-right fixed right-0 top-1/4 z-cta"
      href=""
      onclick="Calendly.initPopupWidget({url: 'https://calendly.com/englishforabroad/trial-esl-class'});return false;"
    >
      <span
        class="bg-[#FF9E80] text-white inline-block font-bold px-10 py-2 rounded-t-lg"
      >
        Book Discovery Call
      </span>
    </a>
    <slot />
  </body>
</html>
