---
export const prerender = false;

import LoginForm from "@/components/LoginForm.vue";
import Logo from "@/components/Logo.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="English for Abroad - Login">
  <main
    class="flex flex-col justify-center px-6 py-12 lg:px-8 min-h-full bg-white"
  >
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <a href="/">
        <Logo class="w-20 mx-auto" />
      </a>
      <h2
        class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-primary"
      >
        Sign in to your account
      </h2>
    </div>
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <LoginForm client:load />
      <p class="mt-10 text-center text-sm/6 text-gray-500">
        Not a member?
        <a href="/register" class="font-semibold text-primary hover:text-accent"
          >Register instead</a
        >
      </p>
    </div>
  </main>
</Layout>
