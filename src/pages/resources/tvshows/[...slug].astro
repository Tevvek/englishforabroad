---
export const prerender = true;
import { getCollection, render } from "astro:content";
import TvShowLayout from "@/layouts/TvShowLayout.astro";

export async function getStaticPaths() {
  const tvshows = await getCollection("tvShows");
  return tvshows.map((tvShow) => ({
    params: { slug: tvShow.id },
    props: { tvShow },
  }));
}

const { tvShow } = Astro.props;
const { Content } = await render(tvShow);
---

<TvShowLayout frontmatter={tvShow.data}>
  <Content />
</TvShowLayout>
