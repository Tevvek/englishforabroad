---
import FreebieLayout from "@/layouts/FreebieLayout.astro";
import FreebieForm from "./_freebie-form";
import { Check } from "lucide-react";
import { Image } from "astro:assets";

import resourcesImage from "@/assets/freebie/01-resources.webp";
import watchAndLearnImage from "@/assets/freebie/02-watch-and-learn.webp";
import stepsImage from "@/assets/freebie/03-steps.webp";

import aliImage from "@/images/ali.webp";
---

<FreebieLayout>
  <main class="py-8 bg-surface overflow-x-hidden">
    <section class="px-8 max-w-2xl mx-auto">
      <p class="uppercase text-center text-sm mb-2 text-balance">
        Stuck in that "I understand, but I can't speak" feeling?
      </p>
      <h1 class="uppercase text-4xl text-center mb-4 text-balance">
        Learn to speak English Confidently using TV SHOWS!
      </h1>
      <p class="text-lg text-center mb-8 text-balance">
        Subscribe to get your free guide, plus language tips and early access to
        new offers and resources to help you speak English with confidence.
      </p>
      <FreebieForm client:visible />
    </section>

    <section
      class="bg-gradient-to-b from-surface from-50% to-accent-custom to-50% py-16"
    >
      <div class="relative h-64">
        <!-- 01 most left -->
        <div
          class="absolute mx-auto inset-0 h-64 w-52 bg-slate-300 -translate-x-20 -rotate-12 shadow-2xl"
        >
          <Image
            src={resourcesImage}
            alt="Freebie resources image"
            class="object-cover h-full object-top-left"
          />
        </div>

        <!-- 02 centered on top of everything-->
        <div
          class="absolute mx-auto inset-0 h-64 w-52 bg-slate-300 z-10 shadow-2xl"
        >
          <Image
            src={watchAndLearnImage}
            alt="Freebie watch and learn image"
            class="object-cover h-full"
          />
        </div>
        <!-- 03 most right -->
        <div
          class="absolute mx-auto inset-0 h-64 w-52 bg-slate-300 translate-x-20 rotate-12 shadow-2xl"
        >
          <Image
            src={stepsImage}
            alt="Freebie steps image"
            class="object-cover h-full object-top-right"
          />
        </div>
      </div>
    </section>

    <section class="bg-accent-custom px-8 pb-8">
      <div class="2xl:container mx-auto">
        <h2 class="text-3xl mb-4 uppercase text-center">What you'll get</h2>
        <ul class="grid gap-y-2 md:grid-cols-2">
          <li class="flex gap-x-2 items-center">
            <Check className="size-4" />
            <span>
              Easy, low-pressure ways to turn your TV time into real speaking
              practice
            </span>
          </li>
          <li class="flex gap-x-2 items-center">
            <Check className="size-4" />
            <span>
              Tricks to build English into your routine in a way that feels fun
              & flexible
            </span>
          </li>
          <li class="flex gap-x-2 items-center">
            <Check className="size-4" />
            <span>
              Tools to gain the confidence to talk about shows in English
            </span>
          </li>
          <li class="flex gap-x-2 items-center">
            <Check className="size-4" />
            <span>
              Access to dozens of show recommendations for practicing English
            </span>
          </li>
        </ul>
      </div>
    </section>

    <section
      class="bg-surface px-8 pt-8 grid md:grid-cols-2 md:grid-rows-[auto_1fr] 2xl:container mx-auto"
    >
      <div class="md:col-start-1 md:row-start-1 text-center md:text-left">
        <p class="text-sm mb-2 uppercase">Behind the guide</p>
        <h2 class="text-3xl mb-4 uppercase">Hi! I'm Ali</h2>
      </div>

      <div
        class="md:col-start-2 md:row-start-1 md:row-span-2 max-w-xs mb-4 mx-auto"
      >
        <Image src={aliImage} alt="My face" />
      </div>

      <div class="md:col-start-1 md:row-start-2">
        <p class="mb-2">
          I help English learners who understand a lot but still feel stuck when
          it's time to speak. If you're tired of studying lots and still not
          feeling confident in real conversations, you're not alone!
        </p>
        <p class="">
          With two Master's degrees and over 1,000 students taught, I focus on
          helping you sound natural, speak with confidence, and enjoy expressing
          yourself in English, especially when you're abroad and want to connect
          with others in real life.
        </p>
      </div>
    </section>
  </main>
</FreebieLayout>
