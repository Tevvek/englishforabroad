---
interface Props {
  creditBalance: number;
}

const { creditBalance } = Astro.props;
---

<article class="rounded-lg border bg-card p-5">
  <h2 class="text-lg font-semibold">Credit Balance</h2>
  <p class="mt-2 text-sm text-muted-foreground">Available to book now.</p>
  <p class="mt-4 text-2xl font-bold">{creditBalance} credits</p>
</article>
