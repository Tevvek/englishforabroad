---
import ReactLayout from "@/layouts/ReactLayout.astro";
import DashboardWrapper from "./_components/dashboard-wrapper.component";
import { SectionCards } from "@/components/section-cards";
---

<ReactLayout title="Dashboard - English for Abroad">
  <DashboardWrapper client:load>
    <div class="flex flex-1 flex-col">
      <div class="@container/main flex flex-1 flex-col gap-2">
        <div class="flex flex-col gap-4 py-4 md:gap-6 md:py-6">
          <SectionCards client:load />
        </div>
      </div>
    </div>
  </DashboardWrapper>
</ReactLayout>
