---
import { Image } from "astro:assets";
import logoSvg from "@/images/logo.svg";

type Props = {
    size?: 'default' | 'small';
}

const { size = 'default' } = Astro.props;

let width, height

if (size === 'default') {
    width = 100
    height = 100
} else {
    width = 75
    height = 75
}
---

<Image src={logoSvg} alt="ESL Logo" loading="eager" width={width} height={height} />
