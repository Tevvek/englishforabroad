---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="relative flex w-full flex-1 flex-col bg-background md:m-2 md:ml-0 md:rounded-xl md:shadow-sm">
  <header class="flex h-14 shrink-0 items-center border-b">
    <div class="flex w-full items-center px-4 lg:px-6">
      <nav aria-label="Breadcrumb" class="text-sm text-muted-foreground">
        <ol class="flex items-center gap-2">
          <li>
            <a href="/dashboard/home" class="transition-colors hover:text-foreground">Dashboard</a>
          </li>
          <li aria-hidden="true" class="text-muted-foreground/70">/</li>
          <li aria-current="page" class="text-foreground">{title}</li>
        </ol>
      </nav>
    </div>
  </header>

  <main class="p-4 lg:p-6">
    <slot />
  </main>
</div>
